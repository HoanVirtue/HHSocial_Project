<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HHSocialNetwork_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HHSocialNetwork_Project.styles.css" asp-append-version="true" />



    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="/css/libs.min.css">
    <link rel="stylesheet" href="/css/socialv.css?v=4.0.0">
    <link rel="stylesheet" href="/vendor/fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/vendor/remixicon/fonts/remixicon.css">
    <link rel="stylesheet" href="/vendor/vanillajs-datepicker/dist/css/datepicker.min.css">
    <link rel="stylesheet" href="/vendor/font-awesome-line-awesome/css/all.min.css">
    <link rel="stylesheet" href="/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">

    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/css/lib-cs-hoan.css">
</head>
<body>

    <!-- Wrapper Start -->
    <div class="wrapper">
        <div class="sidebar-default iq-sidebar">
            <div id="sidebar-scrollbar">
                <nav class="sidebar-menu">
                    
                    @await Component.InvokeAsync("Sidebar")

                </nav>
            </div>
        </div>
        <div class="top-navbar">
            <div class="navbar-custom h-100-h">
                <nav class="navbar navbar-expand-lg navbar-light p-0 h-100-h">
                    <div class="navbar-custom-left flex-default-center">
                        <div class="navbar-logo">
                            <a href="/Home" class="flex-default-center">
                                <img src="/images/logo.png" alt="" class="img-fluid">
                                <span>HHSocial</span>
                            </a>
                        </div>
                        <div class="menu-bt-h">
                            <div class="wrapper-menu">
                                <div class="main-circle">
                                    <i class="ri-menu-line"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="navbar-custom-middle h-100-h">
                        <form action="" class="h-100-h searchbox-form flex-default-center">
                            <a href="#" class="search-link"><i class="ri-search-line"></i></a>
                            <input type="text" class="input-search" name="" id=""
                                placeholder="Tìm kiếm trên HHSocial...">
                        </form>
                    </div>
                    <div class="navbar-custom-right">
                        <ul class="navbar-nav navbar-list ms-auto">
                            @* Home *@
                            <li>
                                <a href="/Home" class="d-flex align-items-center">
                                    <i class="ri-home-line"></i>
                                </a>
                            </li>
                            @* Friends Request *@
                            @* Friends *@

                            @await Component.InvokeAsync("FriendsRequest")

                            @* Notificatino *@

                            @await Component.InvokeAsync("Notifications")

                            @* Chats *@

                            @await Component.InvokeAsync("Chats")

                            @* AccountArrow *@


                            @await Component.InvokeAsync("AccountArrow")
                        </ul>
                    </div>

                </nav>
            </div>
        </div>
        <div id="content-page" class="content-page">
            <div class="container">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <!-- Wrapper End-->




    <footer class="iq-footer bg-white">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item"><a href="../dashboard/privacy-policy.html">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="../dashboard/terms-of-service.html">Terms of Use</a></li>
                    </ul>
                </div>
                <div class="col-lg-6 justify-content-end">
                    Copyright 2020 <a href="#">SocialV</a> All Rights Reserved.
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/libs.min.js"></script>
    <!-- slider JavaScript -->
    <script src="/js/slider.js"></script>
    <!-- masonry JavaScript -->
    <script src="/js/masonry.pkgd.min.js"></script>
    <!-- SweetAlert JavaScript -->
    <script src="/js/enchanter.js"></script>
    <!-- SweetAlert JavaScript -->
    <script src="/js/sweetalert.js"></script>
    <!-- app JavaScript -->
    <script src="/js/charts/weather-chart.js"></script>
    <script src="/js/app.js"></script>
    <script src="/vendor/vanillajs-datepicker/dist/js/datepicker.min.js"></script>
    <script src="/js/lottie.js"></script>
    
    <script type="text/javascript" src="~/js/users_profile.js"></script>
    @* Thư viện toast *@
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
