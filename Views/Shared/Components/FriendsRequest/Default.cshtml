@model IEnumerable<UserFriend>

<li class="nav-item dropdown">
    <a href="#" class="dropdown-toggle" id="group-drop" data-bs-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false">
        <i class="ri-group-line"></i>
    </a>
    <div class="sub-drop sub-drop-large dropdown-menu" aria-labelledby="group-drop">
        <div class="card">
            <div class="card-header d-flex justify-content-between bg-primary">
                <div>
                    <h5 class="text-white">Lời mời kết bạn</h5>
                </div>
                <small class="badge-h bg-light text-dark">4</small>
            </div>
            <div class="card-body p-0">
                @foreach(var item in Model)
                {
                    <div class="friend-request">
                    <div class="sub-card d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <img src="/images/user/01.jpg" alt="" class="avatar-40 rounded">
                            <div class="ms-3">
                                <h6 class="mb-0">@item.IsFriend</h6>
                                <p class="mb-0">
                                    @item.IsFriend
                                </p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <a href="" class="me-3 btn btn-primary rounded">Xác nhận</a>
                            <a href="" class="me-3 btn btn-secondary rounded">Xóa</a>
                        </div>
                    </div>
                </div>
                }
                
            </div>
            <div class="card-footer p-0">
                <div class="text-center">
                    <a href="#" class="btn text-primary">Xem tất cả</a>
                </div>
            </div>
        </div>
    </div>
</li>